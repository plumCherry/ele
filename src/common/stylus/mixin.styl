/*1css像素*/
border-1px($color)
  position relative
  &:after
    position absolute
    content: ''
    display block
    bottom 0
    width 100%
    height 1px
    background $color
/*背景图片*/
bg-color($img)
  background-image  url($img+"@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image  url($img+"@3x.png")
